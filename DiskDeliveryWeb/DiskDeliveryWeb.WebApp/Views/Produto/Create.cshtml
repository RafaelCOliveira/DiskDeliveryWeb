@{
    ViewData["Title"] = "Produto";
}

@model DiskDeliveryWeb.Models.Produto

<form asp-controller="Produto" asp-action="Create" method="Post">
    <div class="row">
        <div class="col-lg-4">	
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input class="form-control" asp-for="Nome" >
                <span style="color:red" asp-validation-for="Nome"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">	
            <div class="form-group">
                <label asp-for="Descricao"></label>
                <input class="form-control" asp-for="Descricao" >
                <span style="color:red" asp-validation-for="Descricao"></span>
            </div>
        </div>
    </div>  
    <div class="row">
        <div class="col-lg-4">	
            <div class="form-group">
                <label asp-for="Preco"></label>
                <input class="form-control" asp-for="Preco" >
                <span style="color:red" asp-validation-for="Preco"></span>
            </div>
        </div>
    </div>  
    <div class="row">
        <div class="col-lg-4">	
            <div class="form-group">
                <label asp-for="Categoria"></label>
                <select class="form-control" asp-for="Id_Categoria" 
                    asp-items='@(new SelectList(@ViewBag.Categorias, "Id_Categoria","Descricao"))'>
                </select>
                <span style="color:red" asp-validation-for="Categoria"></span>
            </div>
        </div>
    </div> 
    <div class="row">
        <div class="col-lg-1">	
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="Ativo" disabled>
                <label class="form-check-label" asp-for="Ativo"></label>
            </div>
        </div>
    </div>  
    <a class="btn btn-primary" asp-controller="Produto" asp-action="Index">Voltar</a>
    <button type="submit" class="btn btn-primary">Salvar</button>    
</form> 